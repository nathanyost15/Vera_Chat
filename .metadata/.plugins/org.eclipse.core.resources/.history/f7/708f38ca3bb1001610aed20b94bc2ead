package client;

public class TimeOut extends Thread
{
	private Timer timer;
	private int timeout;
	public TimeOut(int timeout)
	{
		this.timeout = timeout;
		timer = new Timer();
	}
	
	@Override
	public void run()
	{
		while(true)
		{
			if(timer.checkTick(timeout*1000));
			{
				System.err.println("Time Out has occurred!");
				System.exit(-1);
			}
		}
	}
	
	public void end()
	{
		stop = true;
	}
}
